@{
  Layout = "_Layout";
}

@using SweetSavory.Models;

<div class="jumbotron">
  <h1>Pierre Sweet Savory Store</h1>
</div>
<div class="row index-list-all">
  <div class="col-6 border-right border-dark" id="index-list-Categories">
    <h4>Flavors:</h4>
    @if (@Model.Count == 0)
      {
        <h3>No Flavors have been added yet!</h3>
      } 
    <ul>
      @foreach(Flavor Flavor in Model)
      {
        <li>@Html.ActionLink($"{Flavor.FlavorName}", "Details", "Flavors", new { id = Flavor.FlavorId })</li>
      }
    </ul>
  </div>
  <div class="col-6 border-left border-dark" id="index-list-Recipes">
    <h4>Treats:</h4>
    @if (@Model.Count == 0)
      {
        <h3>No Treats have been added yet!</h3>
      } 
    <ul>
      @foreach(Treat Treat in ViewBag.Treat)
      {
        <li>@Html.ActionLink($"{Treat.TreatName}", "Details", "Treats",new { id = Treat.TreatId })</li>
      }
    </ul>
    <p>@Html.ActionLink("Create or Login to an Account Here!", "Index", "Account")</p>
  </div>
</div>
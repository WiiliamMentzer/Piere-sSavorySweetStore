@{
  Layout = "_Layout";
}

@model SweetSavory.Models.Flavor

<h2>Remove a Treat</h2>

<h4>Remove a Treat for this Flavor: @Html.DisplayFor(model => model.FlavorName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  @Html.Label("Select Treat")
  @Html.DropDownList("TreatId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>
@{
  Layout = "_Layout";
}

@using SweetSavory.Models;
@using System.Security.Claims;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No Flavors have been added yet!</h3>
} 
<ul>
  @foreach (Flavor Flavor in Model)
  {
    <li>@Html.ActionLink($"{Flavor.FlavorName}", "Details", new { id = Flavor.FlavorId }) </li>
  }
</ul>

@if (User.Identity.IsAuthenticated)
{
  <p>Hello @User.Identity.Name!</p>
  <p>@Html.ActionLink("Add New Flavor", "Create")</p>
}
else
{
  <p>Please Log In or Register to Create a Flavor Profile.</p>
  <p>@Html.ActionLink("Register", "Register", "Account")</p>
  <p>@Html.ActionLink("Log in", "Login", "Account")</p>
}
<p>@Html.ActionLink("View All Treats", "Index", "Treats")</p>
